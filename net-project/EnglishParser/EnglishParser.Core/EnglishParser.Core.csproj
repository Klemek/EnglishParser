    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\EnglishParser.DB\EnglishParser.DB.csproj" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="Resources" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="Resources\dict\sql\ep_fill.sql" />
